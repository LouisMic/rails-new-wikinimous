<%= render "banner" %>
<div class="article offset-3 col-6 pt-4 fs-4">
  <div class="border-bottom border-bottom-4 p-1 pb-4">
    <h2><%= @article.title %></h2>
    <div class="d-flex">
      <%= link_to "", edit_article_path(@article), class:"fa-solid fa-pen text-decoration-none" %>
      <%= link_to "", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-solid fa-trash-can ps-2 text-decoration-none" %>
    </div>
  </div>
  <p class="mt-3"><%= @article.content %></p>
</div>
